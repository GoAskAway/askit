{
  "name": "askit",
  "version": "0.1.0",
  "type": "module",
  "description": "AskAway Client Kit - Isomorphic UI components and APIs for Host and Guest",
  "license": "Apache-2.0",
  "author": "kookyleo <kookyleo@gmail.com>",
  "react-native": "./src/index.host.ts",
  "main": "./src/index.guest.ts",
  "types": "./src/index.guest.ts",
  "exports": {
    ".": {
      "react-native": "./src/index.host.ts",
      "default": "./src/index.guest.ts"
    },
    "./core": "./src/core/index.ts",
    "./contracts": "./src/contracts/index.ts"
  },
  "sideEffects": [
    "./src/api/Toast.host.ts"
  ],
  "files": [
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "askc": "bun run cli/askc.ts",
    "generate:contracts": "bun run scripts/generate-contracts.ts",
    "typecheck": "tsc --noEmit",
    "typecheck:cli": "tsc --noEmit -p cli/tsconfig.json",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "biome format --write src",
    "format:check": "biome format src",
    "check": "biome check --write src",
    "check:ci": "biome ci src",
    "prepublishOnly": "bun run typecheck && bun run check:ci && bun test"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-native": "^0.79.0",
    "rill": "workspace:*"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@eslint/js": "^9.39.1",
    "@types/react": "19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "prettier": "^3.6.2",
    "react": "19.0.0",
    "react-native": "0.79.6",
    "rill": "file:../rill",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.48.0"
  },
  "keywords": [
    "askaway",
    "react-native",
    "isomorphic",
    "ui-kit",
    "sandbox"
  ],
  "engines": {
    "bun": ">=1.0.0"
  }
}
